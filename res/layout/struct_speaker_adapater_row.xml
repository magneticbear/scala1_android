<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/speaker_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/speakers_icon_padding"
        android:src="@drawable/speaker_default"
        android:adjustViewBounds="true"
        android:maxWidth="64dp"
        android:maxHeight="64dp"/>
    
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/star_adapter_row_padding"
        android:src="@drawable/events_arrow" />

    <ImageView
        android:id="@+id/fav_star_speaker_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/speaker_icon"
        android:layout_alignRight="@+id/speaker_icon"
        android:paddingRight="2dp"
        android:paddingBottom="3dp"
        android:src="@drawable/speakers_avator_star_off" />

    <TextView
        android:id="@+id/struct_speaker_adapter_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toRightOf="@+id/speaker_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:minLines="1"
        android:paddingLeft="@dimen/speakers_name_padding"
        android:singleLine="true"
        android:text="Name Here Scala Scala Yo"
        android:textColor="#0da4d0"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>