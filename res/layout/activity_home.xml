<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_tile" >
        
         <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="TypesafeCon"
        android:textStyle="bold"
        android:textColor="#f2fafc" 
        android:textSize="@dimen/top_bar_font_size"
        android:shadowColor="#076f96"
        android:shadowDy="-1"
        />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/spaceball" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/spaceball" />

        <Button
            android:id="@+id/btn_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/scala_button"
            android:drawableTop="@drawable/home_events_icon"
            android:paddingBottom="@dimen/scala_button_text_padding"
            android:text="@string/button_events_text"
            android:textColor="@drawable/scala_button_text" />

        <ImageView
            android:id="@+id/ImageView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/spaceball" />

        <Button
            android:id="@+id/btn_speakers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/scala_button"
            android:drawableTop="@drawable/home_speakers_icon"
            android:paddingBottom="@dimen/scala_button_text_padding"
            android:text="@string/button_speakers_text"
            android:textColor="@drawable/scala_button_text" />

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/spaceball" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/spaceball" />

        <Button
            android:id="@+id/btn_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/scala_button"
            android:drawableTop="@drawable/home_favourites_icon"
            android:paddingBottom="@dimen/scala_button_text_padding"
            android:text="@string/button_favourites_text"
            android:textColor="@drawable/scala_button_text" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/spaceball" />

        <Button
            android:id="@+id/btn_playground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/scala_button"
            android:drawableTop="@drawable/home_playground_icon"
            android:paddingBottom="@dimen/scala_button_text_padding"
            android:text="@string/button_playground_text"
            android:textColor="@drawable/scala_button_text" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/spaceball" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/ImageView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/spaceball" />

        <Button
            android:id="@+id/btn_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/scala_button"
            android:drawableTop="@drawable/home_icon_about"
            android:paddingBottom="@dimen/scala_button_text_padding"
            android:text="About TypesafeCon"
            android:textColor="@drawable/scala_button_text" />

        <ImageView
            android:id="@+id/ImageView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/spaceball" />

        <Button
            android:id="@+id/SpaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/scala_button"
            android:drawableTop="@drawable/home_playground_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ImageView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/spaceball" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/typesafe_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/home_typesafe_logo_padding"
            android:src="@drawable/home_typesafe_logo" />

    </LinearLayout>

</LinearLayout>
